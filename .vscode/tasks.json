{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Unit-Test",
            "detail": "do unit test for current file",
            "type": "process",
            "command": "python",
            "args": [
                "${relativeFile}",
                "-v",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Venv",
            "detail": "create virtual environment",
            "type": "shell",
            "command": "virtualenv",
            "args": [
                ".venv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "detail": "build work space, generate package",
            "type": "shell",
            "command": "python",
            "args": [
                "setup.py",
                "sdist",
                "bdist_wheel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Re-Export-XML",
            "detail": "clean legacy and generate new xml result of unit tests",
            "dependsOn": [
                "Clean-XML",
                "Export-XML"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Export-XML",
            "detail": "generate test case result in xml",
            "type": "process",
            "command": "python",
            "args": [
                "${workspaceFolder}\\test\\run_all.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"
                }
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Clean-XML",
            "detail": "clean legacy generated xml files",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "test-reports",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                // solve cmd not recognize rm error
                // bash path need to add into PATH
                "shell": {
                    "executable": "bash.exe",
                    "args": [
                        "-c",
                        "-l"
                    ]
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Re-Build",
            "detail": "clean legacy build and build new package",
            "dependsOn": [
                "Clean-Build",
                "Build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Add-Path",
            "detail": "Add path of source into side-packages of .venv",
            "type": "shell",
            "command": [
                ".script\\add_pth.bat",
            ],
            "args": [
                "${workspaceFolder}",
                "${workspaceFolder}\\${input:packagePath}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Clean-Build",
            "detail": "clean legacy build generated files",
            "type": "shell",
            "command": ".script\\remove.bat",
            "args": [
                "*egg-info",
                "build",
                "*.avi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "packagePath",
            "type": "promptString",
            "description": "rel. path of site-package in virtual environment",
            "default": ".venv\\Lib\\site-packages"
        }
    ]
}